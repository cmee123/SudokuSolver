<HomeWindow>
    name: "home"
    FloatLayout:
        size: root.width, root.height
        MDLabel:
            bold: True
            text: "Sudoku Solver"
            font_size: 45
            halign: "center"
            pos_hint: {"center_x": 0.5, "center_y": 0.6}
        MDFloatingActionButton:
            pos_hint: {"center_x": 0.5, "center_y": 0.4}
            icon: "play"
            on_press:
                app.root.current = "input"
                root.manager.transition.direction = "left"

<InputWindow>
    name: "input"
    FloatLayout:
        size: root.width, root.height
        InputBoard:
            id: input_board
            pos_hint: {"center_x": 0.5, "center_y": 0.55}
        MDRoundFlatButton:
            text: "Next"
            pos_hint: {"center_x": 0.5, "center_y": 0.075}
            on_press:
                root.get_inputs()
                root.clear_inputs()
    MDFloatingActionButton:
        icon: "home"
        pos_hint: {"center_x": 0.125, "center_y": 0.075}
        on_press:
            root.clear_inputs()
            app.root.current = "home"
            root.manager.transition.direction = "right"

<SolveWindow>
    name: "solve"
    on_enter: root.start_process()
    FloatLayout:
        size: root.width, root.height
        Board:
            id: solve_board
            pos_hint: {"center_x": 0.5, "center_y": 0.55}
        MDRoundFlatButton:
            text: "Solve"
            pos_hint: {"center_x": 0.5, "center_y": 0.075}
            on_press: root.start_process(solve=True)
        MDFloatingActionButton:
            pos_hint: {"center_x": 0.125, "center_y": 0.075}
            icon: "home"
            on_press:
                app.root.current = "home"
                root.manager.transition.direction = "right"



